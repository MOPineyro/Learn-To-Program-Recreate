<h1>Edit <%= @lesson.name %> </h1>

<form action="/lessons/<%= @lesson.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="lesson_name">Name:</label>
  <input id="lesson_name" name="lesson[name]" type="text">
  <br>
  <label for="lesson_content">Content:</label>
  <textarea id="lesson_content" name="lesson[content]" type="text" placeholder="Lesson content"></textarea>
  <br>
  <label for="lesson_name">Number:</label>
  <input id="lesson_name" name="lesson[number]" type="number">
  <button>Update Lesson</button>
</form>
